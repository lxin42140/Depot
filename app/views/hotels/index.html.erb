<div class="wrapper">
  <form class="registrations-form" action="" method="">
    <div class="inner">
      <div class="image-holder">
          <div id="carouselImages" class="carousel slide" data-ride="carousel" title="Click image to show project info">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner" data-toggle="modal" data-target="#exampleModalLong">
              <div class="carousel-item active">
                <img class="d-block w-100" src="https://picsum.photos/200/300" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                  <h5>First Image</h5>
                </div>
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="https://picsum.photos/200/300" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Second Image</h5>
                </div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselImages" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselImages" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div><!--End image-holder-->
      <div class="form-content">
        <div class="form-header">
          <h3><%= image_tag("logo.PNG", width: "10%") %> REGISTRATION</h3>
        </div>
        <p class="tagline">Please fill in the register form to receive project information</p>
        <div class="d-flex">
          <div class="form-holder">
            <label for="first_name"><input type="text" placeholder="First Name" class="form-control" id="first_name" name="first_name"></label>
          </div>
          <div class="form-holder">
            <label for="last_name"><input type="text" placeholder="Last Name" class="form-control" id="last_name" name="last_name"></label>
          </div>
        </div><!--End d-flex-->
        <div class="d-flex">
          <div class="form-holder">
            <label for="email"><input type="email" placeholder="Email" class="form-control" id="email" name="email"></label>
          </div>
          <div class="form-holder">
            <label for="contact_number"><input type="text" placeholder="Contact Number" class="form-control" id="contact_number" name="contact_number"></label>
          </div>
        </div><!--End d-flex-->
        <div class="form-row">
          <label for="room_type">
            <select class="select-room-type" id="room_type" name="room_type">
              <option disabled selected value>Select an interested room type</option>
              <option value="2BR">2 Bedroom</option>
              <option value="2BR">2 Bedroom</option>
              <option value="3BR">3 Bedroom</option>
              <option value="Penthouse">Penthouse</option>
            </select>
          </label>
        </div><!--End property type selection-->
        <div class="form-row">
          <label for="message"><textarea placeholder="Enter your message here" class="form-control message-area" id="message" name="message"></textarea></label>
        </div><!--End message-->
        <div class="submit-button-wrapper">
          <button class="submit-button" type="submit">Submit</button>
        </div>
        <div class="form-footer">
          <%= fa_icon "facebook", class: "social-media-link", title: "Visit Us At Facebook", onclick: "" %> &#160;
          <%= fa_icon "instagram", class:"social-media-link", title: "Visit Us At Instagram", onclick: "" %> &#160;
          <%= fa_icon "phone" , class: "social-media-link", title: "Call Us At 6868686868", onclick: "" %>
        </div>
      </div><!--End form-content-->
    </div><!--End inner-->
  </form><!--End form-->
</div>

