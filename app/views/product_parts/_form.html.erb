<%= form_for @product_part, :remote => true do |f| %>

    <% if @product_part.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@product_part.errors.count, "error") %> errors:</h2>
            <ul>
                <% @product_part.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :name %><br/>
        <%= f.text_field :name, required: true, class: "form-control", placeholder: "Product part name"%>
    </div>

    <div class="form-group">
        <%= f.label :description %><br/>
        <%= f.text_field :description, required: true, class: "form-control", placeholder: "Product part description"%>
    </div>

    <div class="form-group ">
        <%= f.label :date_expired %><br/>
        <%= f.date_field  :date_expired, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), required: true, class: "form-control", placeholder: "Expiry date"%>
    </div>
    
    <div class="form-group">
        <%= f.label :product_id %>
        <%= select_tag "product_id", options_from_collection_for_select(@products, :id, :name) %>
    </div>

    <%= f.submit class: "btn btn-primary mb-2"%>

<% end %>
