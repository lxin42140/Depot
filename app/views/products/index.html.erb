<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Product</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Unit price</th>
      <th scope="col" colspan="4" style="text-align:center" >Action</th>
    </tr>
  </thead>

  

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= sanitize(product.name) %></td>
        <td><%= sanitize(product.description) %></td>
        <td><%= number_to_currency(product.unit_price) %></td>
        <% if @user.present? %>
          <td><%= link_to 'Create', new_product_path %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <!-- button_to defaults to POST request -->
          <td><%= button_to 'Add to Cart', sale_transaction_line_items_path(product_id: product) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
