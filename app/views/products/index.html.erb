<h1>Products</h1>

<div id="new-product">
</div>

<div id="edit-product">
</div>

<div id="errors">
</div>

<div class="container">
	<table id="table_products" class="table table-striped table-bordered" role="datatable">
		<thead>
      <th scope="col">Product</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Unit price</th>
      <th scope="col" style="text-align:center" >Action</th>
		</thead>
    <tbody id="products">
      <%= render @products %>
    </tbody>
	</table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#table_products').DataTable({
      "order": [[ 0, 'desc' ]]
    });
  });
</script>
