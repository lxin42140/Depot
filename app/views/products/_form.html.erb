<%= form_with(model: product, local: false) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <td><%= form.label :name %></td>
      <td><%= form.text_field :name, required: true%></td>
    </tr>
    <tr>
      <td><%= form.label :description %></td>
      <td><%= form.text_area :description, required: true %></td>
    </tr>
    <tr>
      <td><%= form.label :unit_price %></td>
      <td><%= form.number_field  :unit_price, required: true, in: 1.0..10000.0 %></td>
    </tr>
    <tr>
      <td style="text-align: center"><%= form.submit %></td>
      <td style="text-align: center"><button type="button" onclick="$('#new-product form').remove();$('#edit-product form').remove();">Close</button></td>
    </tr>
  </table>

<% end %>
