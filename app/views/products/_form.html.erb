<%= form_with(model: product, local: false) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :name %><br/>
  <%= form.text_field :name, required: true%>
</div>

<div class="field">
  <%= form.label :description %><br/>
  <%= form.text_area :description, required: true %>
</div>

<div class="field">
  <%= form.label :unit_price %><br/>
  <%= form.number_field  :unit_price, required: true, in: 1.0..10000.0 %>
</div>

<div class="field">
  <%= form.label :targetted_customers %><br/>
  <%= form.text_area :targetted_customers, required: true%>
</div>

<div class="field">
  <%= form.label :images %><br/>
  <%= form.file_field :images, multiple: true %>
</div>

<%= form.submit %>
<button type="button" onclick="$('#new-product form').remove();$('#edit-product form').remove();">Close</button>

<% end %>
